{{>layouts/header}}  <!-- 레이아웃 -->

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<a class="btn btn-primary" href="/articles/{{article.id}}/edit">EDIT</a>
<a class="btn btn-danger" href="/articles/{{article.id}}/delete">DELETE</a>
<a class="btn btn-primary" href="/articles">GO TO ARTICLES</a>

{{>comments/_comments}} <!-- 덧글 화면 -->

